<html>
<% include header %>
<% if ((currentUser) && (currentUser.id === user.id)) { %>
  <a href="/edit" class="pull-right">Edit your profile</a> <br/>
  <a href="/create" class="pull-right">Add work to your Profile</a>

<% } %>
 <img src="/<%= user.profilePic %>"  class="img-responsive " width="100" height="150" >
  <h1 class="profile-name"> <%= user.name() %> </h1>

<% if (user.bio) { %>
  <p class="profile-bio"><%= user.bio %></p>
<% } %>



<div class="container">
  <div class="row">
    <div class="card-deck" style="width: 100%; height=10px">

  	<% for(var i=0; i<user.works.length; i++) {%>
   	    <div class="col-md-4 col-lg-4 col-xs-4">
            <div class="card" >
              <img class="card-img-top" src="/<%= user.works[i].screenshots[0] %>" alt="Card image cap" height="30%">
              
              <div class="card-block">
                  <a href="/work/<%= user.works[i].name %>"><h2 class="card-title"> <%= user.works[i].name %> </h2></a>
                  <hr class="divider">
                  <p class="card-text"> <%= user.works[i].info %> </p>
              </div>
            </div>

          </div>

          
	  <% } %>
    </div>


  </div>
</div>


<% include footer %>