<!DOCTYPE html>
<% include header %>
<div class="profeelak">
  <h1 >Collections</h1>
</div>

<% users.forEach(function(user) { %>
  <div class="panel panel-default"style="width: 90%;">
    <div class="panel-heading">
      <% if (user.profilePic) { %>
      <img class="index-profile-image"src="/<%= user.profilePicture() %>" alt="http://www.hbc333.com/data/out/190/47199326-profile-pictures.png" >
      <% } %>
      <h2  class="profile-name"> 
        <%= user.name() %>
      </h2> 
    </div>
    <% if (user.bio) { %>
      <div class="panel-body">
        <div class="container" style="width: 100%;">
          <div class="row">
            <div class="card-deck" style="width: 100%;">

            <% for(var i=0; i<user.works.length && i<2; i++) {%>
                <div class="col-md-6 col-lg-6 col-xs-6">
                    <div class="card" >
                      <img class="card-img-top" src="/<%= user.works[i].screenshots[0] %>" alt="Card image cap" >
                      
                      <div class="card-block">
                          <h3 class="card-title"> <%= user.works[i].name %> </h3>
                          <hr class="divider">
                          <p class="card-text"> </p>
                          
                      </div>
                    </div>

                  </div>

                  
            <% } %>
            </div>


          </div>
          <div class="see-more">
            <a  href="/users/<%= user.username %>">See more >> </a>
          </div>
          
        </div>
      </div>
<% } %> </div>
<% }) %>

<div class="paginate">
<% if(pageCount>1){ %>
  <ul class="pagination">
    <% for(var i=1; i<=pageCount; i++) { %> 
      <li><a href="/page/<%= i %>"> <%= i %></a></li>
    <% } %>
  </ul>
<% } %>
</div>

  

<% include footer %>